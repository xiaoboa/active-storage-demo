<% content_for :title, "Editing Blog" %>

<div class="w-full max-w-4xl mx-auto px-4">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Editing Blog</h1>

  <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 mb-6">
    <%= render "form", blog: @blog %>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Show this blog", @blog, class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    <%= link_to "Back to blogs", blogs_path, class: "text-gray-600 hover:text-gray-800 hover:underline" %>
  </div>
</div>
