<p class="text-green-500 mb-4"><%= notice %></p>

<% content_for :title, "Blogs" %>

<div class="w-full max-w-4xl mx-auto px-4">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Blogs</h1>

  <div id="blogs" class="space-y-6">
    <% @blogs.each do |blog| %>
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
        <%= render blog %>
        <div class="mt-4">
          <%= link_to "Show this blog", blog, class: "text-blue-600 hover:text-blue-800 hover:underline" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <%= link_to "New blog", new_blog_path, class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md shadow-sm transition-colors duration-200" %>
  </div>
</div>
